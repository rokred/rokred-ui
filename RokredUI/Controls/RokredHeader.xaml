<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RokredUI.Controls;assembly=RokredUI"
             x:Class="RokredUI.Controls.RokredHeader" 
             BackgroundColor="{StaticResource DarkGrey}"
             VerticalOptions="Start"
             HorizontalOptions="Fill">
    
    <Frame BackgroundColor="{StaticResource HighlightGrey}" 
           HorizontalOptions="Start"
           VerticalOptions="End"
           HasShadow="False" Margin="20" CornerRadius="10">
        <controls:RokredLabel
            x:Name="LabelUserName"
            IsBold="true"
            FontSize="20"
            Margin="5,0"
            Text=""
            TextColor="{StaticResource White}"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center" />
    </Frame>
      
</ContentView>